<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/panel_1"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@drawable/bg"
            android:clickable="true"
            android:padding="11dp" >

            <ImageView
                android:id="@+id/rec_student_1"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_centerVertical="true"
                android:background="@drawable/a" />

            <TextView
                android:id="@+id/rec_student_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/rec_student_1"
                android:text="借贷人1"
                android:textSize="21sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@drawable/bg"
            android:clickable="true"
            android:padding="11dp" >

            <ImageView
                android:id="@+id/rec_student_2"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_centerVertical="true"
                android:background="@drawable/a" />

            <TextView
                android:id="@+id/rec_student_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/rec_student_2"
                android:text="借贷人2"
                android:textSize="21sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_3"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@drawable/bg"
            android:clickable="true"
            android:padding="11dp" >

            <ImageView
                android:id="@+id/rec_student_3"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_centerVertical="true"
                android:background="@drawable/a" />

            <TextView
                android:id="@+id/rec_student_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/rec_student_3"
                android:text="借贷人3"
                android:textSize="21sp" />
        </RelativeLayout>
    </LinearLayout>

