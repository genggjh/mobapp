<?xml version="1.0" encoding="utf-8"?>
<!-- Hard-coded for now. Actual function will be implemented after Prototype. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/panel_1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="设置"
        android:textColor="#a0a0a0"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/panel_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:background="#ffffff"
        android:paddingBottom="7dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7dp"
        android:textColor="#f9f9f9"
        android:textSize="15sp" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="连接服务器测试" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/keep_logged_in"
            android:checked="true" />

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/account"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_marginBottom="6dp"
            android:text="清除数据" />

        <ImageView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/change_password"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/keep_logged_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginBottom="6dp"
            android:text="消息通知" />

        <ImageView
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/keep_logged_in"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/add_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_phone"
            android:layout_alignRight="@+id/account_id"
            android:text="关于" />

        <ImageView
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/add_phone"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/add_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_email"
            android:layout_alignRight="@+id/account_id"
            android:text="登录或退出" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/gengjh/MyWorks/eloancn/mobapp/app/src/main/res/layout/settings.xml -->